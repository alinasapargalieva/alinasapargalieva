#include <stdio.h>
#include <locale.h>
int main() {
    setlocale(LC_ALL, "Russian");
    int n;
	puts("Введите n:");
	scanf_s("%d", &n);
	if (n==0) {
		printf("Нулевое число");
	}
	 if (n>0) {
		printf("Положительное ");
	}
	 else {
		 printf("Отрицательное ");
	 }
	 if (n%2==0) {
		 printf(" четное число");
	 }
	 else {
		 printf(" нечетное число");
	 }
    return 0;
}
